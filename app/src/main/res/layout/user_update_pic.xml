<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/dialog_croner"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Your File is Uploading..."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pro_upimg_dlg_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="FileName.Type"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/pro_upimg_dlg_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/progress_bar"
        android:progress="40"
        android:progressDrawable="@drawable/progress_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pro_upimag_dlg_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="0" />

        <TextView
            android:id="@+id/pro_upimag_dlg_size_percent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="0" />
    </LinearLayout>

    <Button
        android:id="@+id/pro_upimag_dlg_btn_pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/img_up_pause"
        android:text="Pause Upload"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/pro_upimag_dlg_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/img_up_cancel"
        android:text="Cancel Upload"
        android:textColor="@color/colorAccent" />

</LinearLayout>
